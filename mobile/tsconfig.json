{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "allowJs": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "newLine": "lf",
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vu/utils": ["libs/utils/src/index.ts"],
      "@vu/store": ["libs/store/src/index.ts"],
      "@vu/types": ["libs/types/src/index.ts"],
      "@vu/vis": ["libs/vis/src/index.ts"],
      "@vu/plugins": ["libs/plugins/src/index.ts"],
      "@vu/app-shell": ["libs/app-shell/src/index.ts"],
      "@vu/http": ["libs/http/src/index.ts"],
      "@vu/dashboard": ["libs/dashboard/src/index.ts"],
      "@vu/alert": ["libs/alert/src/index.ts"],
      "@vu/routes": ["libs/routes/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
